<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<l:Grid
		defaultSpan="L12 M12 S12"
		width="auto">
		<l:content>
			<f:SimpleForm id="SimpleFormDisplay480"
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				layout="{i18n>ResponsiveGridLayout}"
				title="General Information"
				labelSpanL="4"
				labelSpanM="4"
				emptySpanL="2"
				emptySpanM="2"
				columnsL="2"
				columnsM="2">
				<f:content>
				<Label text="{i18n>Object}" required="true" />
					<Input
						id="productInput"
						type="Text"
						placeholder="Enter Product ..."
						showSuggestion="true">
					</Input>
				<Label text="{i18n>Name}" required="true" />
					<Input
						id="productInput1"
						type="Text"
						placeholder="Enter Product ..."
						showSuggestion="true">
					</Input>
				<Label text="{i18n>Effective From}" required="true" />
					<DatePicker
						id="DP1"
						placeholder=" "
						change="handleChange"
						class="sapUiSmallMarginBottom" />
					
					<core:Title text="" />
				<Label text="{i18n>Description}" />
					<TextArea rows="3"/>
					<Label text="{i18n>Effective To}" required="true"/>
						<DatePicker
							id="DP2"
							placeholder=" "
							change="handleChange"
							class="sapUiSmallMarginBottom" />
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>